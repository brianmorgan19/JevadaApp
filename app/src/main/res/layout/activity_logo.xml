<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".logo_activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imViewLogo"
            android:layout_width="242dp"
            android:layout_height="241dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="79dp"
            android:background="@drawable/jevada_logo" />


        <TextView
            android:textStyle="bold"
            android:id="@+id/txtViewLogo"
            android:layout_width="410dp"
            android:layout_height="29dp"
            android:layout_marginTop="295dp"
            android:alpha=".8"
            android:text="Letâ€™s learn English with Jevada"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="20sp"
            android:fontFamily="@font/podkova"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_free"
            android:layout_width="410dp"
            android:layout_height="29dp"
            android:layout_marginTop="7dp"
            android:fontFamily="@font/podkova"
            android:text="for FREE!"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#ECC600"
            android:textSize="23sp"
            android:textStyle="bold" />

    </RelativeLayout>

    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_getStarted"
            android:layout_width="319dp"
            android:layout_height="49dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:background="@drawable/logo_activity_button"
            android:fontFamily="@font/podkova"
            android:text="Get started"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFF"
            android:textStyle="bold" />
    </RelativeLayout>



    
</LinearLayout>