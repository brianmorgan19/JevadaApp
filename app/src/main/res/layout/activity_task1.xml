<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Task1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="175dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/t"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="244dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="38dp"
            android:fontFamily="@font/podkova"
            android:text="Choose right answer"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="25sp"
            android:textStyle="bold" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/phone"
            android:layout_width="54dp"
            android:layout_height="101dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/phone" />

        <View
            android:layout_marginLeft="109dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_width="152dp"
            android:layout_height="43dp"
            android:background="@drawable/rectask1"/>

        <TextView
            android:id="@+id/txtView"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:paddingLeft="20dp"
            android:text="Телефон"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="24sp"
            android:textStyle="bold" />
        
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn1"
            android:layout_width="194dp"
            android:layout_height="41dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="35dp"
            android:background="@drawable/buttpn_task"
            android:fontFamily="@font/podkova"
            android:text="Cat"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn2"
            android:layout_width="194dp"
            android:layout_height="41dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="19dp"
            android:background="@drawable/buttpn_task"
            android:fontFamily="@font/podkova"
            android:text="Phone"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn3"
            android:layout_width="194dp"
            android:layout_height="41dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="19dp"
            android:background="@drawable/buttpn_task"
            android:fontFamily="@font/podkova"
            android:text="Blanket"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/linet"
            android:layout_width="500dp"
            android:layout_height="3dp"
            android:layout_marginTop="43dp"
            android:background="#CABBBB" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_skip"
            android:layout_width="120dp"
            android:layout_height="49dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/skip"
            android:fontFamily="@font/podkova"
            android:text="Skip"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#CABBBB"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button

            android:id="@+id/btn_next"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/next"
            android:fontFamily="@font/podkova"
            android:text="Next"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>




</LinearLayout>