<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/flSignin"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".SignIn">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="310dp"
                android:layout_height="550dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:background="@drawable/background2" />

            <Button
                android:layout_width="111dp"
                android:layout_height="36dp"
                android:layout_marginLeft="97dp"
                android:layout_marginTop="88dp"
                android:background="@drawable/btn_signin"
                android:fontFamily="@font/podkova"
                android:text="Log in"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:layout_width="221dp"
                android:layout_height="36dp"
                android:layout_marginLeft="97dp"
                android:layout_marginTop="88dp"
                android:background="@drawable/rec5" />

            <TextView
                android:layout_marginTop="93.2dp"
                android:layout_marginLeft="225dp"
                android:text="Sign up"
                android:textStyle="bold"
                android:fontFamily="@font/podkova"
                android:textSize="19sp"
                android:textColor="#FF9900"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:layout_width="65dp"
                android:layout_height="22dp"/>


            <EditText
                android:backgroundTint="#D2D2D2"
                android:fontFamily="@font/podkova"
                android:textSize="13dp"
                android:hint="Enter your email"
                android:layout_marginTop="164dp"
                android:layout_marginLeft="97dp"
                android:layout_width="221dp"
                android:layout_height="wrap_content"/>

            <EditText
                android:backgroundTint="#D2D2D2"
                android:fontFamily="@font/podkova"
                android:textSize="13dp"
                android:hint="Password"
                android:layout_marginTop="205dp"
                android:layout_marginLeft="97dp"
                android:layout_width="221dp"
                android:layout_height="wrap_content"/>

            <TextView
                android:textStyle="bold"
                android:fontFamily="@font/podkova"
                android:textSize="12sp"
                android:layout_marginTop="239dp"
                android:layout_marginLeft="220dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot passwrod?"
                android:textColor="#B6B6B6"/>


            <Button
                android:layout_width="170dp"
                android:layout_height="36dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="97dp"
                android:layout_marginTop="320dp"
                android:background="@drawable/btn_signin"
                android:fontFamily="@font/podkova"
                android:text="Log in"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="97dp"
                android:layout_marginTop="388dp"
                android:fontFamily="@font/podkova"
                android:text="OR"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#8A8A8A"
                android:textStyle="bold"

                />

            <ImageView
                android:layout_width="116dp"
                android:layout_height="31dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="97dp"
                android:layout_marginTop="456dp"
                android:background="@drawable/socialmedia"/>

        </RelativeLayout>






    </LinearLayout>

</FrameLayout>