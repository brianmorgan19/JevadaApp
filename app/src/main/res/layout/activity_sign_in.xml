<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@drawable/background1">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="310dp"
                android:layout_height="550dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:background="@drawable/background2" />


            <TextView
                android:textSize="28sp"
                android:fontFamily="@font/podkova"
                android:layout_width="221dp"
                android:layout_height="36dp"
                android:layout_marginLeft="97dp"
                android:layout_marginTop="88dp"
                android:text="Sing in"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#FF9900" />

            <EditText
                android:id="@+id/id_email1"
                android:layout_width="221dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="97dp"
                android:layout_marginTop="164dp"
                android:backgroundTint="#D2D2D2"
                android:fontFamily="@font/podkova"
                android:hint="Enter your email"
                android:inputType="textEmailAddress"
                android:maxLength="33"
                android:maxLines="1"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/id_password1"
                android:layout_width="221dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="97dp"
                android:layout_marginTop="205dp"
                android:backgroundTint="#D2D2D2"
                android:fontFamily="@font/podkova"
                android:hint="Password"
                android:maxLength="33"
                android:maxLines="1"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="240.5dp"
                android:fontFamily="@font/podkova"
                android:text="Forgot passwrod?"
                android:textColor="#B6B6B6"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/warning_text"
                android:layout_width="216dp"
                android:layout_height="15dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="270dp"
                android:text="Wrong password or email. Try again or click "
                android:textAlignment="center"
                android:textColor="#FF4A4A"
                android:textSize="11sp" />

            <LinearLayout
                android:id="@+id/ll_warning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2.5dp">

                <TextView
                    android:id="@+id/warning_text_FORGOTPASSWORD"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="284dp"
                    android:text="Forgot password"
                    android:textAlignment="center"
                    android:textColor="#00B6A0"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/warning_reset"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="284dp"
                    android:text="to reset it."
                    android:textAlignment="center"
                    android:textColor="#FF4A4A"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/icon_warning"
                android:layout_width="25dp"
                android:layout_height="24dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="244dp"
                android:background="@drawable/warning" />

            <Button
                android:id="@+id/btn_signin"
                android:layout_width="170dp"
                android:layout_height="36dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="97dp"
                android:layout_marginTop="320dp"
                android:background="@drawable/btn_signin"
                android:fontFamily="@font/podkova"
                android:padding="1dp"
                android:text="Log in"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:backgroundTint="@null" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="97dp"
                android:layout_marginTop="388dp"
                android:fontFamily="@font/podkova"
                android:text="OR"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#8A8A8A"
                android:textStyle="bold"

                />

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_marginTop="456dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:elevation="20dp"
                    android:src="@drawable/google"
                    app:tint="@null" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:backgroundTint="@color/white"
                    android:elevation="20dp"
                    android:src="@drawable/twitter2"
                    app:tint="@null" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="20dp"
                    app:tint="@null"
                    android:src="@drawable/facebook"
                    android:backgroundTint="@color/white" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>