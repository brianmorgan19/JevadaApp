<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="175dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/t"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="244dp"
            android:layout_height="32dp"
            android:text="Choose right answer"
            android:layout_marginLeft="38dp"
            android:layout_alignParentLeft="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            android:fontFamily="@font/podkova"
            android:textSize="25sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/phone"
            android:layout_width="54dp"
            android:layout_height="101dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="38dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/phone" />

        <View
            android:layout_marginLeft="109dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_width="152dp"
            android:layout_height="43dp"
            android:background="@drawable/rectask1"/>

        <TextView
            android:id="@+id/txtView"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:paddingLeft="20dp"
            android:text="Телефон"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:clickable="false"
            android:id="@+id/btn1"
            android:layout_width="194dp"
            android:layout_height="41dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="35dp"
            android:background="@drawable/buttpn_task"
            android:fontFamily="@font/podkova"
            android:text="Cat"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:clickable="false"
            android:id="@+id/btn2"
            android:layout_width="194dp"
            android:layout_height="41dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="19dp"
            android:background="@drawable/buttpn_task"
            android:fontFamily="@font/podkova"
            android:text="Phone"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:clickable="false"
            android:id="@+id/btn3"
            android:layout_width="194dp"
            android:layout_height="41dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="19dp"
            android:background="@drawable/buttpn_task"
            android:fontFamily="@font/podkova"
            android:text="Blanket"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="43dp"
        android:id="@+id/correct_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="415dp"
            android:layout_height="90dp"
            android:background="#B0FF95" />

        <ImageView
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/correct1" />

        <TextView
            android:layout_width="85dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="92dp"
            android:fontFamily="@font/podkova"
            android:text="Correct!"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="23sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_correct"
            android:layout_width="129dp"
            android:layout_height="49dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="250dp"
            android:background="@drawable/button_next_correct"
            android:fontFamily="@font/podkova"
            android:text="Next"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#ffff"
            android:textStyle="bold" />

    </RelativeLayout>


</LinearLayout>